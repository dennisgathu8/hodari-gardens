{
  "name": "hodari-gardens",
  "version": "1.0.0",
  "description": "Hodari Gardens Resort - Full-Stack Web Application",
  "scripts": {
    "dev": "shadow-cljs watch app",
    "css": "tailwindcss -i src/css/input.css -o resources/public/css/styles.css",
    "css:watch": "tailwindcss -i src/css/input.css -o resources/public/css/styles.css --watch",
    "build": "npm run css && shadow-cljs release app",
    "server": "clj -M:dev -m hodari-gardens.server"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "shadow-cljs": "^2.26.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}